# ============================================
# CallSim - Lazada Customer Support Simulator
# Senior High School Project Configuration
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Secret Keys (Generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=dev-secret-key-replace-this
JWT_SECRET_KEY=dev-jwt-key-replace-this

# Allowed Origins (for CORS)
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Database (SQLite - simple and local)
DATABASE_URL=sqlite:///callsim.db

# Google Cloud Vertex AI Configuration
# Get your project ID from Google Cloud Console
GOOGLE_CLOUD_PROJECT=your-project-id-here

# Path to your service account credentials JSON file
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-service-account-key.json
